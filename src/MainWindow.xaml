<Window x:Class="CanaryLauncherUpdate.MainWindow"
		xmlns:system="clr-namespace:System;assembly=mscorlib"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CanaryLauncherUpdate"
		Icon="pack://application:,,,/Assets/launcher_ico.png"
		mc:Ignorable="d" 
		Height="500"
		Width="900"
		FontFamily="Segoe UI"
		Background="Transparent"
		x:Name="home"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Title="Glory Launcher"
		Loaded="TibiaLauncher_Load"
		AllowsTransparency="True">
	<!-- Main Container with rounded corners -->
	<Border CornerRadius="15" Background="#1a1a1a" BorderBrush="#333" BorderThickness="1">
		
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>   <!-- Title bar -->
				<RowDefinition Height="140"/>  <!-- Logo section -->
				<RowDefinition Height="130"/>  <!-- Play button section -->
				<RowDefinition Height="120"/>  <!-- News section -->
				<RowDefinition Height="50"/>   <!-- Footer -->
			</Grid.RowDefinitions>

			<Grid.Resources>
				<BitmapImage x:Key="BackGroundKey" UriSource="pack://application:,,,/Assets/background.jpg"/>
				<BitmapImage x:Key="LogoKey" UriSource="pack://application:,,,/Assets/logo.png"/>
				<BitmapImage x:Key="LogoCompanyKey" UriSource="pack://application:,,,/Assets/logo_company.png"/>
				<BitmapImage x:Key="BGButtonUpdateKey" UriSource="pack://application:,,,/Assets/bg_button_update.png"/>
				<BitmapImage x:Key="ButtonPlayKey" UriSource="pack://application:,,,/Assets/button_play.png"/>
				<BitmapImage x:Key="IconPlayKey" UriSource="pack://application:,,,/Assets/icon_play.png"/>
				<BitmapImage x:Key="BgHintsKey" UriSource="pack://application:,,,/Assets/bg_hints.png"/>
				<BitmapImage x:Key="RhLoreKey" UriSource="pack://application:,,,/Assets/rh_lore.png"/>
				
				<!-- Enhanced Storyboards for Animations -->
				<Storyboard x:Key="ButtonHoverIn">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="ButtonHoverOut">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="FadeInAnimation">
					<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>
				</Storyboard>
			</Grid.Resources>
			
			<!-- Background with overlay -->
			<Grid Grid.RowSpan="5">
				<Border CornerRadius="15" ClipToBounds="True">
					<Border.Background>
						<ImageBrush ImageSource="{StaticResource BackGroundKey}" Stretch="UniformToFill"/>
					</Border.Background>
				</Border>
				<!-- Dark overlay for better contrast -->
				<Border CornerRadius="15" Background="#40000000" ClipToBounds="True"/>
			</Grid>
			
			<!-- Window Controls (No Header Bar) -->
			<StackPanel
				Grid.Row="0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,10,15,0"
				Orientation="Horizontal">
				<Button
					x:Name="MinimizeButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource minimize_ico}"
					Click="MinimizeButton_Click"
					Cursor="Hand"
					Margin="0,0,5,0"/>
				<Button
					x:Name="CloseButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource close_ico}"
					Click="CloseButton_Click"
					Tag="IsCloseButton"
					Cursor="Hand"/>
			</StackPanel>

			<!-- Logo Section - Top Left -->
			<Grid Grid.Row="0" Grid.RowSpan="2">
				<Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0">
					<Border.Effect>
						<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.6" BlurRadius="15"/>
					</Border.Effect>
					<Image
						x:Name="ImageLogoServer"
						Height="140"
						Source="{StaticResource LogoKey}"
						Stretch="Uniform"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Visibility="Visible"
						RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<ScaleTransform/>
						</Image.RenderTransform>
						<Image.Triggers>
							<EventTrigger RoutedEvent="Loaded">
								<BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
							</EventTrigger>
						</Image.Triggers>
					</Image>
				</Border>
			</Grid>
		<!-- Button Section - Under News Box -->
			<Grid Grid.Row="3" Grid.RowSpan="2">
				<StackPanel VerticalAlignment="Bottom" 
							HorizontalAlignment="Right" 
							Margin="0,0,50,20">
					
					<!-- Buttons Container -->
					<Grid Width="400" Margin="0,0,0,10">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="10"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						
						<!-- Buy Glory Coins Button -->
						<Button
							Grid.Column="0"
							x:Name="buttonBuyCoins"
							Height="55"
							BorderThickness="0"
							Cursor="Hand"
							BorderBrush="{x:Null}"
							Visibility="Visible"
							RenderTransformOrigin="0.5,0.5">
							
							<Button.RenderTransform>
								<ScaleTransform/>
							</Button.RenderTransform>

							<Button.Background>
								<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
									<GradientStop Color="#FFD700" Offset="0"/>
									<GradientStop Color="#FFA500" Offset="1"/>
								</LinearGradientBrush>
							</Button.Background>

							<Button.ToolTip>
								<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
									<TextBlock
										FontWeight="Bold"
										Text="Buy Glory Coins">
									</TextBlock>
								</ToolTip>
							</Button.ToolTip>

							<Button.Content>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="üí∞" 
											  FontSize="20" 
											  Margin="0,0,8,0"
											  VerticalAlignment="Center"/>
									<TextBlock Text="BUY COINS" 
											  FontWeight="Bold" 
											  FontSize="14" 
											  Foreground="#1a1a1a" 
											  VerticalAlignment="Center"/>
								</StackPanel>
							</Button.Content>
							
							<Button.Style>
								<Style TargetType="{x:Type Button}">
									<Setter Property="Template">
										<Setter.Value>
											<ControlTemplate TargetType="{x:Type Button}">
												<Border Background="{TemplateBinding Background}" 
														CornerRadius="12"
														BorderBrush="#66ffffff"
														BorderThickness="1">
													<Border.Effect>
														<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
													</Border.Effect>
													<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
												</Border>
											</ControlTemplate>
										</Setter.Value>
									</Setter>
									<Style.Triggers>
										<Trigger Property="IsMouseOver" Value="True">
											<Trigger.EnterActions>
												<BeginStoryboard Storyboard="{StaticResource ButtonHoverIn}"/>
											</Trigger.EnterActions>
											<Trigger.ExitActions>
												<BeginStoryboard Storyboard="{StaticResource ButtonHoverOut}"/>
											</Trigger.ExitActions>
										</Trigger>
									</Style.Triggers>
								</Style>
							</Button.Style>
						</Button>
						
						<!-- Play Button -->
						<Button
							Grid.Column="2"
							x:Name="buttonPlay"
							Height="55"
							BorderThickness="0"
							Cursor="Hand"
							BorderBrush="{x:Null}"
							Visibility="Visible"
							Click="buttonPlay_Click"
							MouseLeave="buttonPlay_MouseLeave"
							MouseEnter="buttonPlay_MouseEnter"
							RenderTransformOrigin="0.5,0.5">
		
		<Button.RenderTransform>
		<ScaleTransform/>
		</Button.RenderTransform>
		
		<Button.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
		<GradientStop Color="#4CAF50" Offset="0"/>
		<GradientStop Color="#2E7D32" Offset="1"/>
		</LinearGradientBrush>
		</Button.Background>
		
		<Button.ToolTip>
		<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
		<TextBlock
		x:Name="buttonPlay_tooltip"
		FontWeight="Bold"
		Text="Play Game">
		</TextBlock>
		</ToolTip>
		</Button.ToolTip>
		
		<Button.Content>
		<StackPanel Orientation="Horizontal">
		<Image
		x:Name="buttonPlayIcon"
		Source="{StaticResource IconPlayKey}"
		Stretch="Uniform"
		Height="28"
		Margin="0,0,12,0"/>
		<TextBlock Text="PLAY GLORY" 
		FontWeight="Bold" 
		FontSize="16" 
		Foreground="White" 
		VerticalAlignment="Center"/>
		</StackPanel>
		</Button.Content>
		
		<Button.Style>
		<Style TargetType="{x:Type Button}">
		<Setter Property="Template">
		<Setter.Value>
		<ControlTemplate TargetType="{x:Type Button}">
		<Border Background="{TemplateBinding Background}" 
		CornerRadius="12"
		BorderBrush="#66ffffff"
		BorderThickness="1">
		<Border.Effect>
		<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.4" BlurRadius="8"/>
		</Border.Effect>
		<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
		</ControlTemplate>
		</Setter.Value>
		</Setter>
		<Style.Triggers>
		<Trigger Property="IsMouseOver" Value="True">
		<Trigger.EnterActions>
		<BeginStoryboard Storyboard="{StaticResource ButtonHoverIn}"/>
		</Trigger.EnterActions>
		<Trigger.ExitActions>
		<BeginStoryboard Storyboard="{StaticResource ButtonHoverOut}"/>
		</Trigger.ExitActions>
		</Trigger>
		</Style.Triggers>
		</Style>
		</Button.Style>
						</Button>
					</Grid>
		
		<!-- Enhanced Progress Bar -->
		<ProgressBar
		x:Name="progressbarDownload"
		Width="400"
		Height="10"
		Margin="0, 15, 0, 0"
		Value="100"
		Visibility="Collapsed"
		Background="#33ffffff"
		BorderThickness="0">
		<ProgressBar.Foreground>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
		<GradientStop Color="#FFD700" Offset="0" />
		<GradientStop Color="#FFA500" Offset="1" />
		</LinearGradientBrush>
		</ProgressBar.Foreground>
		<ProgressBar.Style>
		<Style TargetType="ProgressBar">
		<Setter Property="Template">
		<Setter.Value>
		<ControlTemplate TargetType="ProgressBar">
		<Border Background="{TemplateBinding Background}" 
		CornerRadius="5"
		BorderThickness="0">
		<Grid>
		<Border Name="PART_Track" 
		Background="{TemplateBinding Background}" 
		CornerRadius="5"/>
		<Border Name="PART_Indicator" 
		Background="{TemplateBinding Foreground}" 
		CornerRadius="5"
		HorizontalAlignment="Left"/>
		</Grid>
		</Border>
		</ControlTemplate>
		</Setter.Value>
		</Setter>
		</Style>
		</ProgressBar.Style>
		</ProgressBar>
		
		<!-- Enhanced Labels -->
		<TextBlock
		x:Name="labelClientVersion"
		FontFamily="Segoe UI"
		FontSize="12"
		FontWeight="SemiBold"
		Foreground="#E0E0E0"
		HorizontalAlignment="Center"
		Margin="0, 10, 0, 0"
		Visibility="Visible"
		Text="Client Version"/>
		<TextBlock
		x:Name="labelDownloadPercent"
		FontFamily="Segoe UI"
		FontSize="11"
		FontWeight="Medium"
		Foreground="#B0B0B0"
		HorizontalAlignment="Center"
		Margin="0, 5, 0, 0"
		Visibility="Collapsed"
		Text="Download"/>
		</StackPanel>
		</Grid>
		<!-- News/Hints Section - Right Side -->
			<Grid Grid.Row="1" Grid.RowSpan="3">
				<Border
					Width="400"
					Height="280"
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					Margin="0,20,50,0"
					CornerRadius="15">
					<Border.Background>
						<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
							<GradientStop Color="#2a2a2a" Offset="0"/>
							<GradientStop Color="#1e1e1e" Offset="1"/>
						</LinearGradientBrush>
					</Border.Background>
					<Border.Effect>
						<DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.6" BlurRadius="20"/>
					</Border.Effect>

					<Grid Margin="20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition Height="40"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>

						<!-- Enhanced Header -->
						<Border Grid.Row="0" 
								CornerRadius="10" 
								HorizontalAlignment="Stretch" 
								Padding="15,8">
							<Border.Background>
								<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
									<GradientStop Color="#FFD700" Offset="0"/>
									<GradientStop Color="#FFA500" Offset="1"/>
								</LinearGradientBrush>
							</Border.Background>
							<TextBlock
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								FontFamily="Segoe UI"
								FontSize="15"
								FontWeight="Bold"
								Foreground="#1a1a1a"
								Text="üèÜ GLORY NEWS &amp; UPDATES"/>
						</Border>
						
						<Grid Grid.Row="1" Margin="0,15,0,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="80"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>

							<!-- Enhanced Character Image -->
							<Border Grid.Column="0" 
									CornerRadius="10" 
									Background="#3a3a3a"
									Padding="8"
									VerticalAlignment="Top"
									Margin="0,0,0,0">
								<Image
									Source="{StaticResource RhLoreKey}"
									Width="60"
									Stretch="Uniform">
									<Image.Effect>
										<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.5" BlurRadius="10"/>
									</Image.Effect>
								</Image>
							</Border>
							
							<!-- Enhanced Text Content -->
							<ScrollViewer Grid.Column="1" 
										  Margin="15,0,10,10" 
										  VerticalScrollBarVisibility="Auto"
										  HorizontalScrollBarVisibility="Disabled">
								<TextBlock
									x:Name="hintsBox"
									Foreground="#F0F0F0"
									FontFamily="Segoe UI"
									FontSize="12"
									LineHeight="18"
									TextWrapping="Wrap">
									<Run FontWeight="Bold" Foreground="#FFD700" FontSize="14">¬°Bienvenidos a GloryOT!</Run><LineBreak/><LineBreak/>
									
									<Run FontWeight="SemiBold" Foreground="#4CAF50">üéÆ Nuevas Caracter√≠sticas:</Run><LineBreak/>
									‚Ä¢ Sistema de <Run FontWeight="SemiBold" Foreground="#4CAF50">Battle Royale</Run> mejorado<LineBreak/>
									‚Ä¢ Duelos <Run FontWeight="SemiBold" Foreground="#FF5722">1 vs 1</Run> con ranking<LineBreak/>
									‚Ä¢ Nuevas zonas de PvP y eventos<LineBreak/>
									‚Ä¢ Sistema de guilds renovado<LineBreak/><LineBreak/>
									
									<Run FontWeight="SemiBold" Foreground="#FFD700">‚ö° Actualizaciones Recientes:</Run><LineBreak/>
									‚Ä¢ Balance de clases mejorado<LineBreak/>
									‚Ä¢ Nuevos items y equipamiento √©pico<LineBreak/>
									‚Ä¢ Optimizaci√≥n de rendimiento<LineBreak/>
									‚Ä¢ Correcci√≥n de bugs cr√≠ticos<LineBreak/><LineBreak/>
									
									<Run FontWeight="SemiBold" Foreground="#FF9800">‚ö†Ô∏è Importante:</Run><LineBreak/>
									GloryOT puede ser peligroso. ¬°Mantente alerta!<LineBreak/><LineBreak/>
									
									<Run FontWeight="SemiBold" Foreground="#9C27B0">üìÖ Pr√≥ximos Eventos:</Run><LineBreak/>
									‚Ä¢ Torneo de guilds este fin de semana<LineBreak/>
									‚Ä¢ Evento de experiencia doble<LineBreak/>
									‚Ä¢ Nueva quest √©pica disponible<LineBreak/><LineBreak/>
									
									<Run FontStyle="Italic" Foreground="#C0C0C0" FontSize="11">Servidor en constante desarrollo y mejora.</Run>
								</TextBlock>
							</ScrollViewer>
						</Grid>
					</Grid>
				</Border>
			</Grid>
			
			<!-- Footer -->
			<Grid Grid.Row="4" Margin="20,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<!-- Version Label -->
				<TextBlock
					Grid.Column="0"
					x:Name="labelVersion"
					FontFamily="Segoe UI"
					FontSize="11"
					FontWeight="SemiBold"
					Foreground="#B0B0B0"
					VerticalAlignment="Center"
					HorizontalAlignment="Left"
					Text="Version"/>
				
				<!-- Company Logo -->
				<Image
					Grid.Column="1"
					x:Name="ImageLogoCompany"
					Source="{StaticResource LogoCompanyKey}"
					Height="18"
					Stretch="Uniform"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<Image.Effect>
						<DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
					</Image.Effect>
				</Image>
				
				<!-- Status Indicator -->
				<StackPanel Grid.Column="2" 
							VerticalAlignment="Center" 
							HorizontalAlignment="Right" 
							Orientation="Horizontal">
					<Ellipse Width="6" Height="6" 
							Fill="#4CAF50" 
							Margin="0,0,5,0">
						<Ellipse.Effect>
							<DropShadowEffect Color="#4CAF50" Direction="0" ShadowDepth="0" Opacity="0.8" BlurRadius="3"/>
						</Ellipse.Effect>
					</Ellipse>
					<TextBlock Text="Online" 
							  FontFamily="Segoe UI" 
							  FontSize="9" 
							  FontWeight="Medium" 
							  Foreground="#4CAF50"/>
				</StackPanel>
			</Grid>
		</Grid>
	</Border>
</Window>
