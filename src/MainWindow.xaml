<Window x:Class="CanaryLauncherUpdate.MainWindow"
		xmlns:system="clr-namespace:System;assembly=mscorlib"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CanaryLauncherUpdate"
		Icon="pack://application:,,,/Assets/launcher_ico.png"
		mc:Ignorable="d" 
		Height="500"
		Width="900"
		FontFamily="Segoe UI"
		Background="Transparent"
		x:Name="home"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Title="Glory Launcher"
		Loaded="TibiaLauncher_Load"
		AllowsTransparency="True">
	<!-- Main Container with rounded corners and shadow -->
	<Border CornerRadius="15" Background="#1a1a1a" BorderBrush="#333" BorderThickness="1">
		<Border.Effect>
			<DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0.8" BlurRadius="20"/>
		</Border.Effect>
		
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>   <!-- Title bar -->
				<RowDefinition Height="140"/>  <!-- Logo section -->
				<RowDefinition Height="130"/>  <!-- Play button section -->
				<RowDefinition Height="120"/>  <!-- News section -->
				<RowDefinition Height="50"/>   <!-- Footer -->
			</Grid.RowDefinitions>

			<Grid.Resources>
				<BitmapImage x:Key="BackGroundKey" UriSource="pack://application:,,,/Assets/background.jpg"/>
				<BitmapImage x:Key="LogoKey" UriSource="pack://application:,,,/Assets/logo.png"/>
				<BitmapImage x:Key="LogoCompanyKey" UriSource="pack://application:,,,/Assets/logo_company.png"/>
				<BitmapImage x:Key="BGButtonUpdateKey" UriSource="pack://application:,,,/Assets/bg_button_update.png"/>
				<BitmapImage x:Key="ButtonPlayKey" UriSource="pack://application:,,,/Assets/button_play.png"/>
				<BitmapImage x:Key="IconPlayKey" UriSource="pack://application:,,,/Assets/icon_play.png"/>
				<BitmapImage x:Key="BgHintsKey" UriSource="pack://application:,,,/Assets/bg_hints.png"/>
				<BitmapImage x:Key="RhLoreKey" UriSource="pack://application:,,,/Assets/rh_lore.png"/>
				
				<!-- Enhanced Storyboards for Animations -->
				<Storyboard x:Key="ButtonHoverIn">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.05" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="ButtonHoverOut">
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
					<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
									To="1.0" Duration="0:0:0.2">
						<DoubleAnimation.EasingFunction>
							<QuadraticEase EasingMode="EaseOut"/>
						</DoubleAnimation.EasingFunction>
					</DoubleAnimation>
				</Storyboard>
				
				<Storyboard x:Key="FadeInAnimation">
					<DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>
				</Storyboard>
			</Grid.Resources>
			
			<!-- Background with overlay -->
			<Grid Grid.RowSpan="5">
				<Border CornerRadius="15">
					<Border.Background>
						<ImageBrush ImageSource="{StaticResource BackGroundKey}" Stretch="UniformToFill"/>
					</Border.Background>
				</Border>
				<!-- Dark overlay for better contrast -->
				<Border CornerRadius="15" Background="#40000000"/>
			</Grid>
			
			<!-- Window Controls (No Header Bar) -->
			<StackPanel
				Grid.Row="0"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,10,15,0"
				Orientation="Horizontal">
				<Button
					x:Name="MinimizeButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource minimize_ico}"
					Click="MinimizeButton_Click"
					Cursor="Hand"
					Margin="0,0,5,0"/>
				<Button
					x:Name="CloseButton"
					Style="{StaticResource WindowButtonStyle}"
					Content="{StaticResource close_ico}"
					Click="CloseButton_Click"
					Tag="IsCloseButton"
					Cursor="Hand"/>
			</StackPanel>

			<!-- Logo Section - Top Left -->
			<Grid Grid.Row="0" Grid.RowSpan="2">
				<Border HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0">
					<Border.Effect>
						<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.6" BlurRadius="15"/>
					</Border.Effect>
					<Image
						x:Name="ImageLogoServer"
						Height="140"
						Source="{StaticResource LogoKey}"
						Stretch="Uniform"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Visibility="Visible"
						RenderTransformOrigin="0.5,0.5">
						<Image.RenderTransform>
							<ScaleTransform/>
						</Image.RenderTransform>
						<Image.Triggers>
							<EventTrigger RoutedEvent="Loaded">
								<BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
							</EventTrigger>
						</Image.Triggers>
					</Image>
				</Border>
			</Grid>
		<!-- Play Button Section -->
		<Grid Grid.Row="2">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<Button
		x:Name="buttonPlay"
		Width="160"
		Height="55"
		BorderThickness="0"
		Cursor="Hand"
		BorderBrush="{x:Null}"
		Visibility="Visible"
		Click="buttonPlay_Click"
		MouseLeave="buttonPlay_MouseLeave"
		MouseEnter="buttonPlay_MouseEnter"
		RenderTransformOrigin="0.5,0.5">
						
						<Button.RenderTransform>
							<ScaleTransform/>
						</Button.RenderTransform>

						<Button.Background>
							<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
								<GradientStop Color="#4CAF50" Offset="0"/>
								<GradientStop Color="#2E7D32" Offset="1"/>
							</LinearGradientBrush>
						</Button.Background>

						<Button.ToolTip>
							<ToolTip Background="#2a2a2a" BorderBrush="#555" Foreground="White">
								<TextBlock
									x:Name="buttonPlay_tooltip"
									FontWeight="Bold"
									Text="Play Game">
								</TextBlock>
							</ToolTip>
						</Button.ToolTip>

						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<Image
									x:Name="buttonPlayIcon"
									Source="{StaticResource IconPlayKey}"
									Stretch="Uniform"
									Height="24"
									Margin="0,0,8,0"/>
								<TextBlock Text="PLAY" 
										  FontWeight="Bold" 
										  FontSize="14" 
										  Foreground="White" 
										  VerticalAlignment="Center"/>
							</StackPanel>
						</Button.Content>
						
						<Button.Style>
							<Style TargetType="{x:Type Button}">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="{x:Type Button}">
											<Border Background="{TemplateBinding Background}" 
													CornerRadius="8"
													BorderBrush="#66ffffff"
													BorderThickness="1">
												<Border.Effect>
													<DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
												</Border.Effect>
												<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Trigger.EnterActions>
											<BeginStoryboard Storyboard="{StaticResource ButtonHoverIn}"/>
										</Trigger.EnterActions>
										<Trigger.ExitActions>
											<BeginStoryboard Storyboard="{StaticResource ButtonHoverOut}"/>
										</Trigger.ExitActions>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>
				<!-- Enhanced Progress Bar -->
					<ProgressBar
						x:Name="progressbarDownload"
						Width="160"
						Height="8"
						Margin="0, 15, 0, 0"
						Value="100"
						Visibility="Collapsed"
						Background="#33ffffff"
						BorderThickness="0">
						<ProgressBar.Foreground>
							<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
								<GradientStop Color="#FFD700" Offset="0" />
								<GradientStop Color="#FFA500" Offset="1" />
							</LinearGradientBrush>
						</ProgressBar.Foreground>
						<ProgressBar.Style>
							<Style TargetType="ProgressBar">
								<Setter Property="Template">
									<Setter.Value>
										<ControlTemplate TargetType="ProgressBar">
											<Border Background="{TemplateBinding Background}" 
													CornerRadius="4"
													BorderThickness="0">
												<Grid>
													<Border Name="PART_Track" 
															Background="{TemplateBinding Background}" 
															CornerRadius="4"/>
													<Border Name="PART_Indicator" 
															Background="{TemplateBinding Foreground}" 
															CornerRadius="4"
															HorizontalAlignment="Left"/>
												</Grid>
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ProgressBar.Style>
					</ProgressBar>
					
					<!-- Enhanced Labels -->
					<TextBlock
						x:Name="labelClientVersion"
						FontFamily="Segoe UI"
						FontSize="12"
						FontWeight="SemiBold"
						Foreground="#E0E0E0"
						HorizontalAlignment="Center"
						Margin="0, 10, 0, 0"
						Visibility="Visible"
						Text="Client Version"/>
					<TextBlock
						x:Name="labelDownloadPercent"
						FontFamily="Segoe UI"
						FontSize="10"
						FontWeight="Medium"
						Foreground="#B0B0B0"
						HorizontalAlignment="Center"
						Margin="0, 5, 0, 0"
						Visibility="Collapsed"
						Text="Download"/>
				</StackPanel>
			</Grid>
		<!-- News/Hints Section -->
			<Grid Grid.Row="3">
				<Border
					Width="700"
					Height="100"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					CornerRadius="12"
					Background="#15ffffff"
					BorderBrush="#30ffffff"
					BorderThickness="1">
				<Border.Effect>
					<DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
				</Border.Effect>

				<Grid Margin="15">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<Grid.RowDefinitions>
						<RowDefinition Height="25"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<!-- Enhanced Header -->
					<Border Grid.Row="0" 
							Background="#20FFD700" 
							CornerRadius="8" 
							HorizontalAlignment="Center" 
							Padding="12,4">
						<TextBlock
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							FontFamily="Segoe UI"
							FontSize="13"
							FontWeight="Bold"
							Foreground="#FFD700"
							Text="ðŸ† GLORY NEWS"/>
					</Border>
					
					<Grid Grid.Row="1" Margin="0,8,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="70"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<!-- Enhanced Character Image -->
						<Border Grid.Column="0" 
								CornerRadius="8" 
								Background="#10ffffff"
								Padding="5">
							<Image
								Source="{StaticResource RhLoreKey}"
								Width="50"
								Stretch="Uniform">
								<Image.Effect>
									<DropShadowEffect Color="#FFD700" Direction="0" ShadowDepth="0" Opacity="0.3" BlurRadius="8"/>
								</Image.Effect>
							</Image>
						</Border>
						
						<!-- Enhanced Text Content -->
						<ScrollViewer Grid.Column="1" 
									  Margin="10,0,0,0" 
									  VerticalScrollBarVisibility="Auto"
									  HorizontalScrollBarVisibility="Disabled">
							<TextBlock
								x:Name="hintsBox"
								Foreground="#E0E0E0"
								FontFamily="Segoe UI"
								FontSize="11"
								LineHeight="16"
								TextWrapping="Wrap">
								<Run FontWeight="SemiBold" Foreground="#FFD700">Â¡Bienvenidos a GloryOT!</Run><LineBreak/>
								La meta siempre serÃ¡ hacer una experiencia duradera.<LineBreak/>
								Disfruta de nuestros sistemas Ãºnicos como <Run FontWeight="SemiBold" Foreground="#4CAF50">Battle Royale</Run><LineBreak/>
								o incluso el sistema de <Run FontWeight="SemiBold" Foreground="#FF5722">duelos 1 vs 1</Run>.<LineBreak/>
								<Run FontWeight="SemiBold" Foreground="#FFD700">Â¡Buena suerte!</Run> Cuidado, GloryOT puede ser peligroso.<LineBreak/>
								<Run FontStyle="Italic" Foreground="#B0B0B0">Estamos en constante desarrollo.</Run>
							</TextBlock>
						</ScrollViewer>
					</Grid>
				</Grid>
				</Border>
			</Grid>
			
			<!-- Footer -->
			<Grid Grid.Row="4" Margin="20,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<!-- Version Label -->
				<TextBlock
					Grid.Column="0"
					x:Name="labelVersion"
					FontFamily="Segoe UI"
					FontSize="11"
					FontWeight="SemiBold"
					Foreground="#B0B0B0"
					VerticalAlignment="Center"
					HorizontalAlignment="Left"
					Text="Version"/>
				
				<!-- Company Logo -->
				<Image
					Grid.Column="1"
					x:Name="ImageLogoCompany"
					Source="{StaticResource LogoCompanyKey}"
					Height="18"
					Stretch="Uniform"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<Image.Effect>
						<DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
					</Image.Effect>
				</Image>
				
				<!-- Status Indicator -->
				<StackPanel Grid.Column="2" 
							VerticalAlignment="Center" 
							HorizontalAlignment="Right" 
							Orientation="Horizontal">
					<Ellipse Width="6" Height="6" 
							Fill="#4CAF50" 
							Margin="0,0,5,0">
						<Ellipse.Effect>
							<DropShadowEffect Color="#4CAF50" Direction="0" ShadowDepth="0" Opacity="0.8" BlurRadius="3"/>
						</Ellipse.Effect>
					</Ellipse>
					<TextBlock Text="Online" 
							  FontFamily="Segoe UI" 
							  FontSize="9" 
							  FontWeight="Medium" 
							  Foreground="#4CAF50"/>
				</StackPanel>
			</Grid>
		</Grid>
	</Border>
</Window>
